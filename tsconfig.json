{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "strict": true
  },
  "include": ["src"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
